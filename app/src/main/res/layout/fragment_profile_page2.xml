<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration.RegistrationStep2Fragment"
    android:orientation="vertical"
    >


    <TextView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/startblue"
        android:id="@+id/payOpt"
        android:text="Mode of Payment:"
        android:textSize="20dp"/>
    <Spinner
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:textSize="22dp"
        android:layout_height="wrap_content"
        android:id="@+id/payOptSpinner"/>
    <TextView
        android:textColor="@color/startblue"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:text="Transaction ID:"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/transId"/>
    <EditText
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:id="@+id/transacIdEDit"
        android:hint="Enter Transaction Id"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <TextView
            android:layout_alignParentLeft="true"
            android:textColor="@color/startblue"
            android:layout_width="200dp"
            android:text="Date of Transaction:"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_date_picker"
            android:id="@+id/datePicker"
            />

    </RelativeLayout>


    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:calendarTextColor="@color/startblue"
        android:visibility="visible"
        android:id="@+id/dateP"
        tools:headerBackground="@color/startblue" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <TextView
        android:layout_width="252dp"
        android:layout_height="37dp"
        android:layout_margin="20dp"
        android:text="Upload Reciept:"
        android:textColor="@color/startblue"
        android:textSize="20dp" />
    <Button
        android:layout_margin="20dp"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:id="@+id/uploadImmage"
        android:text="upload"/>
</LinearLayout>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Name of Bank:"
        android:textColor="@color/startblue"/>
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:id="@+id/bankname"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="IFSc Code:"
        android:textColor="@color/startblue"/>
    <EditText
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IFSC code"
        android:textSize="22dp"
        android:id="@+id/ifscCode"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <Button
            android:layout_margin="20dp"
            android:layout_width="100dp"
            android:background="@color/startblue"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/prevpage2"
            android:text="Prev"/>
        <Button
            android:layout_margin="20dp"
            android:textColor="#ffffff"
            android:layout_width="100dp"
            android:background="@color/startblue"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="30dp"
            android:id="@+id/nextpage2"
            android:text="next"/>


    </RelativeLayout>


</LinearLayout>
</ScrollView>